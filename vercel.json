{
    "version": 2,
    "builds": [
      {
        "src": "src/**/*",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "db.json",
        "use": "@vercel/json-server"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/db.json"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }
  